{
  "name": "my-express-app",
  "version": "1.0.0",
  "description": "A simple Express application using TypeScript.",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node -r tsconfig-paths/register dist/app.js",
    "dev": "nodemon --watch src --ext ts --exec ts-node -r tsconfig-paths/register src/app.ts"
  },
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "express": "^4.17.1",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^4.17.13",
    "@types/node": "^16.11.7",
    "nodemon": "^3.1.11",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "license": "MIT"
}
